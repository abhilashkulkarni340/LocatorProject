<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:paddingBottom="2.5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2.5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#fff"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_weight="1">


            <LinearLayout
                android:id="@+id/cart_plus_minus_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/plist_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="0.23"
                    android:paddingRight="5dip"
                    android:text="Dosa"
                    android:textColor="#1d1d1d"
                    android:textSize="12dip"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/plist_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:paddingRight="25dip"
                    android:text="Rs. 20"
                    android:textColor="#343434"
                    android:textSize="12dip" />

                <TextView
                    android:id="@+id/plist_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:paddingRight="25dip"
                    android:text="1 plate"
                    android:textColor="#343434"
                    android:textSize="12dip" />

                <ImageView
                    android:id="@+id/cart_plus_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_circle_outline_black_24dp" />

                <TextView
                    android:id="@+id/plist_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:text="10"
                    android:textSize="12dip"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/cart_minus_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_remove_circle_outline_black_24dp" />
            </LinearLayout>
        </RelativeLayout>

    </TableRow>
</TableLayout>